<!-- ./views/layouts/edit.handlebars -->
<div id="newpage" class="text-left">
  <form action="/records/{{{record.id}}}/edit?_method=PUT" method="POST">
    <div>
      <label for="name" class="my-1">名稱：</label>
      <input type="text" value="{{{record.name}}}" name="name" maxlength="20" id="name" class="form-control">
    </div>
    <div class="form-group m-0">
      <label for="date" class="my-1">時間：</label>
      <input class="form-control" type="date" id="date" name="date" value="{{{record.date}}}">
    </div>
    <div>
      <label for="category" class="my-1">類別：</label>
      <select class="custom-select" name="category" id="category">
        <option value="{{{record.category}}}" selected>Change</option>
        <option value="home">家居物業</option>
        <option value="shuttle-van">交通出行</option>
        <option value="grin-beam">休閒娛樂</option>
        <option value="utensils">餐飲食品</option>
        <option value="pen">其他</option>
      </select>
    </div>
    <div>
      <label for="amount" class="my-1">金額：</label>
      <input type="number" value="{{{record.amount}}}" name="amount" id="amount" class="form-control">
    </div>
    <div class="row w-100 m-0 mt-3">
      <div class="col text-right p-0">
        <a class="btn btn-secondary" href="/">返回</a>
        <button type="submit" class="btn btn-success">Save</button>
      </div>
    </div>
  </form>
</div>